<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title><%= @config[:title] %></title>
    <%= stylesheet_link_tag %>
    <script src="jquery.js" type="text/javascript"></script>
    <style type="text/css">
      .filename {opacity: 0.2}
      a {text-decoration: none}
      ul {list-style-type: none}
    </style>
  </head>
  <body>
    <div id="index">
      <h1><%= @config[:title] %></h1>
      <ul>
<% each_file do |file, index| %>
          <li><a href="<%= file.basename %>"><%= index.next %>. <%= h1_part %></a> <span class="filename"><%= file.basename %></span></li>
<% end %>
      </ul>
    </div>
  </body>
</html>

